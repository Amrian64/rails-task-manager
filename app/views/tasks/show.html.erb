
<div class="my_container">
  <div class="container">
    <div class="row">
      <h2> Afficher la task : </h2>
    </div>
    <div class="row">
      <h2><%= @task.title %></h2>
    </div>
    <div class="row">
      <p><%= @task.details %></p>
    </div>
    <div class="row">
      <p><%= @task.completed %></p>
    </div>

    <div class="row">
      <i class="far fa-trash-alt"></i>
      <%= link_to "Delete", task_path(@task.id),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    </div>
    <div class="row">
      <i class="far fa-edit"></i>
      <%= link_to "Edit", edit_task_path(@task),
            method: :get,
            data: { confirm: "Are you sure?" } %>
    </div>
    <div class="row">
      <i class="fas fa-undo-alt"></i>
      <%= link_to "Revenir Ã  la liste", tasks_path %>
    </div>
  </div>
</div>
